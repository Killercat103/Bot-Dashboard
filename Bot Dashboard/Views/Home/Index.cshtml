@{
	ViewData["Title"] = HostConfig.HostName;
}

<div class="frontpagebanner">
	@{
		if (ViewData["SignedIn"] == null)
		{
			<h1>Welcome to @HostConfig.HostName's Dashboard!</h1>
		}
		else
		{
			<h1>Welcome Back, @ViewData["Username"]!</h1>
		}
	}
</div>

<h1>Welcome to the frontpage!</h1>

<link rel="stylesheet" type="text/css" href="~/CSS/Comment_section.css" />

<section>
	<p v-for="items in item" v-text="items"></p>
	<textarea type="text" class="input" placeholder="Write a comment" v-model="newItem" keyup.enter="addItem()"></textarea>
	<br/><button v-on:click="addItem()" class='primaryContained float-right' type="submit">Add Comment</button>
</section>
